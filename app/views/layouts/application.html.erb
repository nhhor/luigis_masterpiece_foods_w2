<!DOCTYPE html>
<html>
<head>
  <title>Luigi's Masterpiece Foods</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <%= image_tag("lmf.png", class: "LMFBanner", alt: "LMF Logo") %>
  <!-- <h1>Luigi's Masterpiece Foods</h1> -->

  <div class="container">


    <% if user_signed_in? %>
      <%= link_to "Home", '/' %> | Logged in as <%= current_user.email %> | <%= link_to "Sign out", '/users/sign_out' %> <BR>
    <% else %>
      <%= link_to "Home", '/' %> | <%= link_to "Sign up", '/users/sign_up' %> | <%= link_to "Sign in", '/users/sign_in' %>
    <% end %>
    <hr>


    <% content_for(:navbar) do %>
    <h2 class="navbar"><a href="/">Home</a> |
      <%= link_to "Products", products_path %>
    </h2>
    <% end %>
    <%= yield :navbar %>

    <hr>

    <div class="noticeFloat">
      <%= flash[:notice] %>
    </div>

    <div class="alertFloat">
      <%= flash[:alert] %>
    </div>

    <%= yield %>

  </div>
</body>
</html>
