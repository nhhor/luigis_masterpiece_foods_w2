<div class="row">

  <div class="col-sm-4">
    <% if @products.any? %>
    <h3>All products:</h3>
    <ul>
      <% @products.each do |product| %>
      <li><%= link_to product.name, product_path(product) %></li>
      <% end %>
    </ul>
    <% else %>
    <h3>There are no products yet.</h3>
    <% end %>
  </div>

  <div class="col-sm-4">
    <% if @made_in_the_usa.any? %>
    <h4>We're proud to highlight the following products of ours made in the USA:</h4>

    <ul>
      <% @made_in_the_usa.each do |product| %>
      <li><%= link_to product.name, product_path(product) %></li>
      <% end %>
    </ul>
    <% else %>
    <p>Unfortunately, none of our products are made in the USA. Oops.</p>
    <% end %>
  </div>

  <div class="col-sm-4">
    <h3 class="btn btn-lg btn-success"><%= link_to "Add new product", new_product_path %></h3>
  </div>

</div>
